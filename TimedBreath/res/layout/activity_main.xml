<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" 
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center"
        tools:context=".MainActivity"
        android:layout_weight="1" 
        android:baselineAligned="false">
        
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_weight="35" >
	           
		    <TextView
		        android:text="@string/inhale_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="14sp" />
		    
		    <Spinner
			    android:id="@+id/inhale_spinner"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:entries="@array/seconds_count"
			    android:prompt="@string/inhale_text" />
		     
		    <TextView
		        android:text="@string/exhale_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="14sp" />
		    
		   <Spinner
			   android:id="@+id/exhale_spinner"
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:entries="@array/seconds_count"
			   android:prompt="@string/exhale_text" />
		   
		    <TextView
		        android:text="@string/duration_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="14sp" />
		    
		    <Spinner
			    android:id="@+id/duration_spinner"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:entries="@array/duration_mins"
			    android:prompt="@string/duration_text" />
	    
	  </LinearLayout>
	  
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_weight="35" >
		    
	        <TextView
		        android:text="@string/inhale_hold"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="14sp" />
	        
	       <Spinner
			   android:id="@+id/in_hold_spinner"
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:entries="@array/hold_count"
			   android:prompt="@string/inhale_hold" />	   
	        	     
		    <TextView
		        android:text="@string/exhale_hold"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="14sp" />
		    
		    <Spinner
			    android:id="@+id/out_hold_spinner"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:entries="@array/hold_count"
			    android:prompt="@string/exhale_hold" />
		    
		   <TextView
		       android:text="@string/music"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:textSize="14sp" />
	    
		  <ToggleButton 
			  android:id="@+id/music_button"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:textOn="On"
			  android:textOff="Off" />
			   
	  </LinearLayout>
	           
	  <LinearLayout 
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:orientation="vertical"
	      android:layout_weight="30"
	      android:paddingTop="20dip" >         
	  
	      <Button
	        android:id="@+id/btnStart"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:minHeight="190dp"
	        android:maxHeight="190dp"
            android:text="Start"
	        android:onClick="outputBreathing" />
	    
	    
	    </LinearLayout>
	    
	    
</LinearLayout> 
	
    
	    
	
    
